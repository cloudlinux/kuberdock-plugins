<div class="container-fluid top-offset">
    <div class="row">
        <div class="col-md-2">
            <h3>Defaults</h3>
        </div>
    </div>

    <div class="row">
        <form action="?a=setDefaults" method="post">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="packageId">Default package</label>
                    <select name="packageId" id="packageId">
                    [% FOREACH row IN packages %]
                        <option value="[% row.id %]">[% row.name %]</option>
                    [% END %]
                    </select>
                </div>

                <div class="form-group" class="kube-count-div">
                    <label for="kubeType">Default kube type</label>
                    <select name="kubeType" id="kubeType">
                    [% FOREACH row IN kubes %]
                        <option value="[% row.id %]">[% row.name %]</option>
                    [% END %]
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    function getKubes() {
        jQuery.ajax({
            url: 'addon_kuberdock.cgi?a=getPackageKubes',
            data: {
                packageId: jQuery('#packageId').val()
            },
            dataType: 'json'
        }).done(function(data) {
            jQuery('#kubeType').empty();
            jQuery.each(data, function(k, v) {
                jQuery('#kubeType').append(jQuery('<option>', {
                    value: v.id,
                    text: v.name
                }));
            });
        });
    };
    jQuery(document).on('change', '#packageId', function() {
        getKubes();
    });
</script>